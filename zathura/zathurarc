#for fonts
set font PragmataPro\ 9
set zoom-max 11000

# keybindings
map [fullscreen] a adjust_window best-fit
map [fullscreen] s adjust_window width
map [fullscreen] f follow
map [fullscreen] <Tab> toggle_index
map [fullscreen] j scroll down
map [fullscreen] k scroll up
map cc recolor

#colors
set recolor true
set recolor-lightcolor "#20121F"
set statusbar-bg "#20121F"
set statusbar-fg "#DD6459"
set default-fg #ffffff
set completion-fg "#DD6459"
set completion-bg "#20121F"
set completion-highlight-fg "#20121F"
set completion-highlight-bg "#DD6459"
set completion-group-bg "#20121F"
set completion-group-fg "#DD6459"
set inputbar-bg "#20121F"
set inputbar-fg "#DD6459"
set tabbar-focus-fg "#20121F"
set tabbar-focus-bg "#DD6459"
